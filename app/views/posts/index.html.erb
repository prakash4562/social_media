<%= link_to "sign-out", destroy_user_session_path, method: :delete %>

<h1><%= current_user.email %> => posts</h1>

<table>
  <thead>
    <tr>
      <th>User Id</th>
      <th>Post Id</th>
      <th>Title</th>
      <th>Content</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user.id %></td>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.post_tag %></td>
        <td><%= link_to 'Show', post, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-primary #{post.user.id == current_user.id ? '' : 'disabled'}" %></td>
        <td><%= link_to 'Destroy', post, class: "btn btn-danger #{post.user.id == current_user.id ? '' : 'disabled'}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
